{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=prod-server;Database=TrueRepDB_Prod;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "ApiSettings": {
    "BaseUrl": "https://api.truerep.com",
    "Environment": "Production"
  },
  "SwaggerSettings": {
    "Enabled": false
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "https://truerep.com",
      "https://www.truerep.com"
    ]
  },
  "RateLimiting": {
    "PermitLimit": 1000,
    "Window": "00:01:00",
    "SegmentsPerWindow": 20
  }
}
